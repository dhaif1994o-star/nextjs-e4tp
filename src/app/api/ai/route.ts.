    console.error("Error in /api/ai:", error);
    return NextResponse.json(
      { reply: "âš ï¸ Ø­Ø¯Ø« Ø®Ø·Ø£ Ø£Ø«Ù†Ø§Ø¡ Ù…Ø¹Ø§Ù„Ø¬Ø© Ø§Ù„Ø·Ù„Ø¨." },
      { status: 500 }
    );
  }
}
